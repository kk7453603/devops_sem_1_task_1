# Ansible Inventory для DevOps лаборатории
# Инвентарь для контейнеров в Docker сети

[all:vars]
ansible_connection=docker
ansible_user=root
ansible_ssh_common_args='-o StrictHostKeyChecking=no'

# Группа всех серверов
[servers:children]
nginx_servers
app_servers

# Nginx серверы
[nginx_servers]
nginx-server ansible_host=nginx-server

# Серверы с приложением
[app_servers]
app-server ansible_host=app-server

# Локальные хосты для тестирования
[local]
localhost ansible_connection=local

# Настройки для Docker контейнеров
[servers:vars]
ansible_python_interpreter=/usr/bin/python3

# Специфичные настройки для nginx серверов
[nginx_servers:vars]
nginx_port=80
web_root=/var/www/html

# Специфичные настройки для серверов приложения
[app_servers:vars]
app_dir=/opt/myapp
app_user=myapp
app_port=8000
app_host=0.0.0.0